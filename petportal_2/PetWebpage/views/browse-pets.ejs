<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/stylesheets/base.css">
        <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
        <title>Browse Pets</title>
        <style>
            .pets-gallery {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
                gap: 20px;
                padding: 20px;
            }
            
            .pet-item {
                background-color: #fff;
                border-radius: 8px;
                overflow: hidden;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
                transition: transform 0.3s ease;
            }
            
            .pet-item:hover {
                transform: translateY(-5px);
            }
            
            .pet-image {
                width: 100%;
                height: 200px;
                object-fit: cover;
            }
            
            .pet-name {
                text-align: center;
                padding: 15px;
                font-size: 18px;
                font-weight: bold;
                color: #5a3d5a;
                margin: 0;
            }
            
            .pet-status {
                text-align: center;
                padding-bottom: 15px;
                color: #666;
                font-size: 14px;
            }
            
            .filter-container {
                padding: 20px;
                background-color: #f9f5f7;
                margin: 20px 0;
                border-radius: 8px;
            }
            
            .filter-container label {
                margin-right: 10px;
                font-weight: bold;
                color: #5a3d5a;
            }
            
            .filter-container select {
                padding: 8px 15px;
                border-radius: 4px;
                border: 1px solid #d1c4d1;
            }
            
            .no-pets {
                text-align: center;
                padding: 40px;
                font-size: 18px;
                color: #666;
            }
        </style>
    </head>
    <body>
        <%- include('components/header') %>

        <div class="about-content">
            <h1>Browse Our Pets</h1>
            <div class="filter-container">
                <label for="filter">Filter by Type:</label>
                <select id="filter" name="filter" onchange="filterPets()">
                    <option value="all">All</option>
                    <option value="dog">Dogs</option>
                    <option value="cat">Cats</option>
                    <option value="other">Other Pets</option>
                </select>
            </div>

            <div class="pets-gallery">
                <% if (typeof pets !== 'undefined' && pets.length > 0) { %>
                    <% pets.forEach(pet => { %>
                        <div class="pet-item <%= pet.type %>">
                            <a href="/pet-profile/<%= pet.id %>">
                                <% 
                                let imageUrl = "/assets/default-pet.png";
                                if (pet.photoPath) {
                                    imageUrl = pet.photoPath;
                                }
                                %>
                                <img src="<%= imageUrl %>" alt="<%= pet.name %>" class="pet-image">
                                <p class="pet-name"><%= pet.name %></p>
                                <p class="pet-status">Status: <%= pet.status %></p>
                            </a>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="no-pets">No pets available for adoption at this time.</p>
                <% } %>
            </div>
        </div>

        <footer class="auth-footer">
            <p>&copy; 2025 PET PORTAL <a href="/help">Help Center</a> | <a href="/privacy">Privacy Policy</a></p>
        </footer>

        <script>
            // Filter function to show pets based on selected type
            function filterPets() {
                const filterValue = document.getElementById('filter').value;
                const petItems = document.querySelectorAll('.pet-item');

                petItems.forEach(pet => {
                    if (filterValue === 'all' || pet.classList.contains(filterValue)) {
                        pet.style.display = 'block';
                    } else {
                        pet.style.display = 'none';
                    }
                });
            }
        </script>
    </body>
</html>