<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/stylesheets/base.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet" />
  <title>Pet Portal - Admin Portal</title>
</head>
<body>

  <!-- Header -->
  <%- include('components/header') %>

    <!-- Main Section -->
    <main class="admin-main">
        <h1>User Management</h1>
        <div class="user-list">
        <table id="userTable">
          <thead>
            <tr>
              <th>User ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Role</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <!-- User rows will be populated here -->
          </tbody>
        </table>
        </div>
    </main>

  <script>
    async function fetchUsers() {
      try {
        const response = await fetch('/users/api/users');
        if (!response.ok) {
          const errorData = await response.json();
          throw new Error(errorData.error || 'Failed to fetch users');
        }
        
        const users = await response.json();
        const userTableBody = document.querySelector('#userTable tbody');
        userTableBody.innerHTML = '';

        if (users.length === 0) {
          userTableBody.innerHTML = `
            <tr>
              <td colspan="5" class="no-users">No users found</td>
            </tr>
          `;
          return;
        }

        users.forEach(user => {
          const row = document.createElement('tr');
          row.innerHTML = `
            <td>${user.id}</td>
            <td>${user.firstName} ${user.lastName}</td>
            <td>${user.email}</td>
            <td>${user.role}</td>
            <td>
              <button onclick="editUser(${user.id})">Edit</button>
              <button onclick="deleteUser(${user.id})">Delete</button>
            </td>
          `;
          userTableBody.appendChild(row);
        });
      } catch (error) {
        console.error('Error fetching users:', error);
        const errorContainer = document.createElement('div');
        errorContainer.className = 'error-message';
        errorContainer.innerHTML = `
          <strong>Error:</strong> ${error.message}
          ${error.details ? `<br><small>${error.details}</small>` : ''}
        `;
        document.querySelector('.user-list').prepend(errorContainer);
      }
    }

    async function editUser(userId) {
      // TODO: Implement edit functionality
      alert('Edit functionality coming soon!');
    }

    async function deleteUser(userId) {
      if (confirm('Are you sure you want to delete this user?')) {
        try {
          const response = await fetch(`/users/api/users/${userId}`, {
            method: 'DELETE'
          });
          if (!response.ok) throw new Error('Delete failed');
          fetchUsers(); // Refresh the table
        } catch (error) {
          console.error('Delete error:', error);
          alert('Error deleting user');
        }
      }
    }

    // Initialize when page loads
    window.onload = function() {
      fetchUsers();
    };
  </script>

  <!-- Footer (same as home.ejs) -->
  <footer class="auth-footer">
    <p>&copy; 2025 PET PORTAL <a href="/help">Help Center</a> | <a href="/privacy">Privacy Policy</a></p>
  </footer>

</body>
</html>

