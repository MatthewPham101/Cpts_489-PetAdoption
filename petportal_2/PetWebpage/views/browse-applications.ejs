<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/base.css">
    <title>Browse Applications</title>
    <style>
        .applications-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .application-card {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            border-bottom: 1px solid grey;
        }
        
        .application-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
        }
        
        .application-pet {
            font-weight: bold;
            color: #5a3d5a;
        }
        
        .application-status {
            padding: 5px 10px;
            border-radius: 4px;
            font-weight: bold;
        }
        
        .status-pending {
            background-color: #FFF3CD;
            color: #856404;
        }
        
        .application-detail {
            margin: 10px 0;
        }
        
        .application-actions {
            margin-top: 20px;
        }
        
        .btn {
            padding: 8px 15px;
            margin-right: 10px;
            border-radius: 4px;
            text-decoration: none;
            font-size: 14px;
        }
        
        .btn-approve {
            background-color: #28a745;
            color: white;
        }
        
        .btn-reject {
            background-color: #dc3545;
            color: white;
        }

        .approved-btn {
            background-color: #e0d6db;
            text-align: center;
            border: 1px solid black;
            padding: 4px;
            font-size: 18px;
            border-radius: 8px;
            cursor: pointer;
            width: 95%;
            text-decoration: none;
            color: black;
            display: inline-block;
            margin: 5px;
        }

        .approved-btn:hover {
            background-color: #ff92c2;
            color: white;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <%- include('components/header') %>

    <div class="applications-container">
        <h1>Adoption Applications</h1>

        <a href="/approved-applications" class="approved-btn">See All Approved Applications</a>
        
        <% if (applications && applications.length > 0) { %>
            <% applications.forEach(app => { %>
                <% if (app.status != 'rejected') { %>
                    <div class="application-card">
                        <div class="application-header">
                            <span class="application-pet">Pet: <%= app.petName %></span>
                            <span class="application-status status-<%= app.status %>">
                                <%= app.status.charAt(0).toUpperCase() + app.status.slice(1) %>
                            </span>
                        </div>
                        
                        <div class="application-detail"><strong>Applicant:</strong> <%= app.applicantName %></div>
                        <div class="application-detail"><strong>Email:</strong> <%= app.applicantEmail %></div>
                        <div class="application-detail"><strong>Phone:</strong> <%= app.applicantPhone %></div>
                        <div class="application-detail"><strong>Address:</strong> <%= app.applicantAddress %></div>
                        <div class="application-detail"><strong>Living Situation:</strong> <%= app.livingSituation %></div>
                        <div class="application-detail"><strong>Reason for Adoption:</strong> <%= app.adoptionReason %></div>
                        <div class="application-detail"><strong>Applied On:</strong> <%= new Date(app.applicationDate).toLocaleDateString() %></div>
                        
                        <% if (app.status === 'pending') { %>
                            <div class="application-actions">
                                <form action="/approve-application/<%= app.id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-approve">Approve</button>
                                </form>
                                <form action="/reject-application/<%= app.id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-reject">Reject</button>
                                </form>
                            </div>
                        <% } %>
                    </div>
                <% } %>
            <% }); %>
        <% } else { %>
            <p>No applications found.</p>
        <% } %>
    </div>

    <footer class="auth-footer">
        <p>&copy; 2025 PET PORTAL <a href="/help">Help Center</a> | <a href="/privacy">Privacy Policy</a></p>
    </footer>
</body>
</html>