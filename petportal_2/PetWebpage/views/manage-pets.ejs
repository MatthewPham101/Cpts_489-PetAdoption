<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/stylesheets/base.css">
        <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
        <title>Manage Pets</title>
    </head>
    <body>
        <header class="auth-header">
            <div class="nav-left">
              <a href="/">
                <img src="/assets/pet-portal-logo.png" alt="Pet Portal Logo" class="logo" />
              </a>
              <nav class="nav-links">
                <% if (user && user.role === 'shelter') { %>
                  <!-- Shelter-specific navigation -->
                  <a href="/manage-pets">Manage Pets</a>
                  <a href="/browse-applications">Browse Applications</a>
                  <a href="/create-pet-profile">Create Pet Profile</a>
                  <a href="/edit-shelter">Edit Shelter</a>
                <% } else { %>
                  <!-- Default/Adopter navigation -->
                  <a href="/about-us">About Us</a>
                  <a href="/adoption-application">Adoption Application</a>
                  <a href="/browse-pets">Browse Pets</a>
                  <a href="/pet-compatibility">Pet Compatibility Quiz</a>
                <% } %>
              </nav>
            </div>
            <div class="auth-buttons">
              <% if (user) { %>
                <span class="welcome-message">Welcome, <%= user.firstName %>!</span>
                <a href="/auth/logout" class="btn btn-secondary">Log Out</a>
              <% } else { %>
                <a href="/auth/login" class="btn btn-secondary">Log In</a>
                <a href="/auth/signup" class="btn btn-secondary">Sign Up</a>
              <% } %>
            </div>
          </header>

        <div class="about-content">
            <h1>Manage Pets</h1>
            <div class="filter-container">
                <label for="filter">Filter by Type:</label>
                <select id="filter" name="filter" onchange="filterPets()">
                    <option value="all">All</option>
                    <option value="dog">Dogs</option>
                    <option value="cat">Cats</option>
                    <option value="other">Other Pets</option>
                </select>
            </div>

            <div class="pets-gallery">
                <% if (pets && pets.length > 0) { %>
                    <% pets.forEach(pet => { %>
                        <div class="pet-wrapper">
                            <div class="pet-item <%= pet.type %> inside">
                                <a href="/pet-profile/<%= pet.id %>">
                                    <% 
                                    let imageUrl = "/assets/default-pet.png";
                                    if (pet.photoPath != "") {
                                        imageUrl = pet.photoPath;
                                    }
                                    %>
                                    <img src="<%= imageUrl %>" alt="<%= pet.name %>" class="pet-image">
                                    <p class="pet-name"><%= pet.name %></p>
                                    <p class="pet-status">Status: <%= pet.status %></p>
                                </a>
                            </div>
                            <div class="edit-bar">
                                <a href="/edit-pet/<%= pet.id %>" class="edit-button">Edit</a>
                                <form action="/delete-pet/<%= pet.id %>" method="POST" style="display: inline;">
                                    <button type="submit" class="edit-button" onclick="return confirm('Are you sure you want to delete <%= pet.name %>?')">Delete</button>
                                </form>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="no-pets">You haven't added any pets yet. <a href="/create-pet-profile">Add your first pet</a></p>
                <% } %>
            </div>
        </div>

        <footer class="auth-footer">
            <p>&copy; 2025 PET PORTAL <a href="/help">Help Center</a> | <a href="/privacy">Privacy Policy</a></p>
        </footer>

        <script>
            // Filter function to show pets based on selected type
            function filterPets() {
                const filterValue = document.getElementById('filter').value;
                const petItems = document.querySelectorAll('.pet-item');

                petItems.forEach(pet => {
                    if (filterValue === 'all' || pet.classList.contains(filterValue)) {
                        pet.parentElement.style.display = 'block';
                    } else {
                        pet.parentElement.style.display = 'none';
                    }
                });
            }
        </script>
    </body>
</html>

<style>
    .pet-wrapper {
        display: block;
        height: 100%;
        text-align: center;
        margin-bottom: 20px;
    }

    .edit-button {
        background-color: #e0d6db;  /* Darker pink */
        border: none;
        padding: 4px;
        font-size: 18px;
        border-radius: 8px;
        cursor: pointer;
        width: 48%;
        text-decoration: none;
        color: black;
        display: inline-block;
    }

    .inside {
        height: 90%;
    }

    .edit-button:hover {
        background-color: #ff92c2;
        color: white;
    }

    .edit-bar {
        display: flex;
        justify-content: space-between;
        flex-direction: row;
        padding: 5px 0px;
    }

    .pet-status {
        font-size: 14px;
        color: #666;
        margin-top: 5px;
    }

    .no-pets {
        text-align: center;
        font-size: 18px;
        margin: 40px 0;
    }

    .no-pets a {
        color: #ff6b9d;
        text-decoration: none;
    }

    .no-pets a:hover {
        text-decoration: underline;
    }
</style>