<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <div class="wrapper">
        <header>
            <div class="logo">
                <img src="/img/logo.png" alt="Logo">
            </div>
        </header>

        <div class="profileImage">
            <img src="/img/defaultProfile.jpg" alt="Default Profile">
        </div>

        <div class="banner">
            <h1><%= typeof banner !== 'undefined' ? banner : 'Default Banner Text' %></h1>
        </div>

        <article>
            <%- content %> 
        </article>

        <aside id="sidebar">
            <button id="closeSidebarBtn">
                <img src="/img/close.svg" alt="Close Sidebar" width="25" height="25">
            </button>
            <button id="openSidebarBtn" style="display: none;">
                <img src="/img/Icons-Temp_icon-x-close.svg" alt="Open Sidebar" width="20" height="20">
            </button>
            <div class="sidebar-content">
                <table class="menutable">
                    <tr><td><a href="/">Home</a></td></tr>
                    <tr>
                        <% if (user) { %>
                        <td><a href="/logout">Logout</a></td>
                        <% } else { %>
                        <td><a href="/login">Login</a></td>
                        <% } %>
                    </tr>
                </table>
            </div>
        </aside>

        <footer>Contact us:</footer>
    </div>

    <script src="/js/script.js" defer></script>
</body>
</html>
